@model GermanProject.ViewModels.Home.QuizViewModel
@{
    ViewData["Title"] = "Quiz";
    var vocabWords = (List<VocabWord>)ViewData["VocabWords"];
}

<br>
<br>
<div class="col-md-6 col-md-offset-3">
    <form class="form-horizonal" role="form" method="post">
        <div class="form-group">
            <h2>
                <span class="label label-info">Chapter @vocabWords[0].ChapterId Quiz</span></h2>
        </div>
        @foreach (var word in vocabWords)
        {
            <div class="form-group">
                <h3>
                    <span class="label label-default">@word.Word</span></h3>
            </div>
            <div class="form-group">
                <label>English:</label>
                <input asp-for="Answer" type="text" class="form-control"/>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
        }
        <div>
            <input type="submit" value="Submit" class="btn btn-success"/>
        </div>
    </form>

</div>